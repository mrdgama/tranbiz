{% block _logo_widget %}
    {% if app.request.attributes.get('_route') == 'oro_frontend_root' %}
        <img
            src="{% image '@HarioCustomThemeBundle/Resources/public/themes/customtheme/images/logo.png' %}{{ asset_url }}{% endimage %}"
            class="logo"
            alt="logo"
        >
    {% else %}
        <a href="{{ path('oro_frontend_root') }}" class="logo" style="background: url('{% image '@HarioCustomThemeBundle/Resources/public/themes/customtheme/images/logo.png' %}{{ asset_url }}{% endimage %}') no-repeat; background-position: center;">Hario</a>
    {% endif %}
{% endblock %}
